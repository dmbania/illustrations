<section class="isp3-info ff-form-group">
    <div class="ff-row">
        <h2 class="ff-col" id="riders-benefits">3. Riders/Benefits</h2>
    </div>

    <div class="ff-row">
        <div class="ff-col">
            <label class="ff-label">
                <input type="checkbox" name="accidental-death-benefit">
                Accidental Death Benefit
            </label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col ffx-ml-2">
            <label class="ff-label">Face</label>
            <input type="text" name="accidental-death-benefit-face" class="ff-input ff-input--inline" placeholder="50,000.00" disabled>
        </div>

        <div class="ff-col">
            <label class="ff-label"><input type="checkbox" name="accidental-death-benefit-keep-equal" disabled>
            Keep ADB Face equal to Policy Face<br>
            <small>($200,000 max.)</small></label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col">
            <label class="ff-label">
                <input type="checkbox" name="waiver-of-premium">
                Waiver of Premium
            </label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col">
            <label class="ff-label">
                <input type="checkbox" name="insureds-term">
                Insured's Term Rider
            </label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col ffx-ml-2">
            <label class="ff-label">Years</label>
            <select name="insureds-term-years" class="ff-input ff-input--inline" disabled>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
            </select>
        </div>

        <div class="ff-col">
            <label class="ff-label">Face</label>
            <input type="text" name="insureds-term-face" class="ff-input ff-input--inline" placeholder="200,00" disabled>
            or
        </div>

        <div class="ff-col">
            <select name="insureds-term-face-multiple" class="ff-input ff-input--inline" disabled>
                <option value="">[Enter Amount]</option>
                <option value="1">1x Policy Face</option>
                <option value="2">2x Policy Face</option>
                <option value="3">3x Policy Face</option>
                <option value="4">4x Policy Face</option>
                <option value="5">5x Policy Face</option>
            </select>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col">
            <label class="ff-label">
                <input type="checkbox" name="spouses-term">
                Spouse's Term Rider
            </label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col ffx-ml-2">
            <label class="ff-label">Age</label>
            <input type="number" name="spouses-term-age" min="16" max="80" class="ff-input ff-input--inline" placeholder="35" disabled>
        </div>

        <div class="ff-col">
            <label class="ff-label">Face</label>
            <input type="text" name="spouses-term-face" class="ff-input ff-input--inline" placeholder="200,000" disabled>
        </div>

        <div class="ff-col">
            <label class="ff-label">Gender</label><br>
            <label class="ff-label"><input type="radio" name="spouses-term-gender" value="M" disabled> Male</label>
            <label class="ff-label"><input type="radio" name="spouses-term-gender" value="F" disabled> Female</label>
        </div>

        <div class="ff-col">
            <label class="ff-label">Tobacco</label><br>
            <label class="ff-label"><input type="radio" name="spouses-term-tobacco" value="N" disabled> Non-Tobacco</label>
            <label class="ff-label"><input type="radio" name="spouses-term-tobacco" value="Y" disabled> Tobacco</label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col">
            <label class="ff-label">
                <input type="checkbox" name="childs-term">
                Child's Term Rider
            </label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col ffx-ml-2">
            <label class="ff-label">Units</label>
            <input type="number" name="childs-term-units" class="ff-input ff-input--inline" min="0" max="10" placeholder="0" disabled>
        </div>
    </div>

    <section>
        <div class="ff-row">
            <div class="ff-col">
                <label class="ff-label">
                    <input type="checkbox" name="guardian-insurability">
                    Guardian Insurability Rider
                </label>
            </div>
        </div>

        <div class="ff-row">
            <div class="ff-col ffx-ml-2">
                <label class="ff-label">Face</label>
                <input type="text" name="guardian-insurability-face" class="ff-input ff-input--inline" placeholder="25,000" disabled>
            </div>
        </div>
    </section>
</section>
