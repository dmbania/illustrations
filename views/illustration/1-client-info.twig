{% set state_name = "client-state" %}

<section class="ff-form-group">
    <div class="ff-row">
        <h2 class="ff-col" id="customer-info">1. Client Info</h2>
    </div>

    <div class="ff-row">
        <div class="ff-col-1of2">
            <label class="ff-label" for="client-name">Client Name</label>
            <input type="text" name="client-name" id="client-name" class="ff-input">
        </div>

        <div class="ff-col-1of2">
            <label class="ff-label">Gender</label><br>
            <input type="radio" class="" name="client-gender" id="client-gender-m" value="M"> <label class="ff-label" for="client-gender-m">Male</label>
            <input type="radio" class="" name="client-gender" id="client-gender-f" value="F"> <label class="ff-label" for="client-gender-f">Female</label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col-1of2">
            <label class="ff-label">State of Issue</label>
            {% include 'partials/states.twig' %}
        </div>

        <div class="ff-col-1of2">
            <label class="ff-label" for="client-age">Issue Age</label>
            <input type="number" class="ff-input" name="client-age" id="client-age" min="0" max="80" value="" placeholder="35" >
        </div>
    </div>
</section>

