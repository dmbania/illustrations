{% extends 'layouts/standard.twig' %}

{% import 'macros/html.twig' as html %}

{% set selected_tab = 'generate' %}

{% block title null %}

{% block scripts %}

    {{ html.script('/assets/vendor/foresters/js/FliacIndex.js', true) }}


{% endblock %}

{% block content %}
    <div class="ff-box ff-bg-plum ff-float-right xff-hidden">
        <ol>
            <li>Customer Info</li>
            <li>Policy Info</li>
            <li class="isp3-info">Riders/Benefits</li>
            <li class="iswl-info">Riders</li>
            <li class="iswl-info">Loans</li>
        </ol>
        <div class="ffx-bb-gray-1 ffx-py-1">
            <button class="ff-button run-illustration-button">Run Illustration</button>
        </div>
        <div class="ff-box-heading">Summary</div>
        <div><span class="ff-label">Product</span> <span class="summary-product"></span></div>
        <div><span class="ff-label">Face Amount</span> <span class="summary-face-amount"></span></div>
        <div><span class="ff-label">Premium</span> <span class="summary-premium"></span></div>
        <div><span class="ff-label">Riders</span> <span class="summary-riders"></span></div>
    </div>

    <form action="" id="illustration-form-all" class="ffx-py-1 ffx-container" style="margin-right: 25rem;">
        <section>
            <div class="ff-row ff-box ff-bg-plum">
                <div class="ff-col">
                    <label class="ff-label">Product:</label>

                    <select name="product" class="ff-input ff-input--inline select-product">
                        <option value="ISP3-CHOICE-15">ISP3 Choice 15</option>
                        <option value="ISP3-CHOICE-WHILE-LIFE">ISP3 Choice While Life</option>
                        <option value="ISP3-CHOICE-WHILE-LIFE-EXPRESS">ISP3 Choice While Life Express</option>
                        <option value="ISWL-2-3.50">ISWL-2 3.50%</option>
                    </select>
                </div>
            </div>
        </section>

        <!-- 1. Client Info -->
        <section class="ff-form-group">
            <div class="ff-row">
                <h2 class="ff-col">1. Client Info</h2>
            </div>

            <div class="ff-row">
                <div class="ff-col-1of2">
                    <label class="ff-label">Client Name</label>
                    <input type="text" name="name" class="ff-input">
                </div>

                <div class="ff-col-1of2">
                    <label class="ff-label">Gender</label><br>
                    <input type="radio" class="" name="client-gender" id="client-gender-m" value="M"> <label class="ff-label" for="client-gender-m">Male</label>
                    <input type="radio" class="" name="client-gender" id="client-gender-f" value="F"> <label class="ff-label" for="client-gender-f">Female</label>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col-1of2">
                    <label class="ff-label">State of Issue</label>
                    <select name="state" class="ff-input">
                        <option value="AL">Alabama</option>
                        <option value="AK">Alaska</option>
                        <option value="AZ">Arizona</option>
                        <option value="AR">Arkansas</option>
                        <option value="CA">California</option>
                        <option value="CO">Colorado</option>
                        <option value="CT">Connecticut</option>
                        <option value="DE">Delaware</option>
                        <option value="DC">District Of Columbia</option>
                        <option value="FL">Florida</option>
                        <option value="GA">Georgia</option>
                        <option value="HI">Hawaii</option>
                        <option value="ID">Idaho</option>
                        <option value="IL">Illinois</option>
                        <option value="IN">Indiana</option>
                        <option value="IA">Iowa</option>
                        <option value="KS">Kansas</option>
                        <option value="KY">Kentucky</option>
                        <option value="LA">Louisiana</option>
                        <option value="ME">Maine</option>
                        <option value="MD">Maryland</option>
                        <option value="MA">Massachusetts</option>
                        <option value="MI">Michigan</option>
                        <option value="MN">Minnesota</option>
                        <option value="MS">Mississippi</option>
                        <option value="MO">Missouri</option>
                        <option value="MT">Montana</option>
                        <option value="NE">Nebraska</option>
                        <option value="NV">Nevada</option>
                        <option value="NH">New Hampshire</option>
                        <option value="NJ">New Jersey</option>
                        <option value="NM">New Mexico</option>
                        <option value="NY">New York</option>
                        <option value="NC">North Carolina</option>
                        <option value="ND">North Dakota</option>
                        <option value="OH">Ohio</option>
                        <option value="OK">Oklahoma</option>
                        <option value="OR">Oregon</option>
                        <option value="PA">Pennsylvania</option>
                        <option value="RI">Rhode Island</option>
                        <option value="SC">South Carolina</option>
                        <option value="SD">South Dakota</option>
                        <option value="TN">Tennessee</option>
                        <option value="TX">Texas</option>
                        <option value="UT">Utah</option>
                        <option value="VT">Vermont</option>
                        <option value="VA">Virginia</option>
                        <option value="WA">Washington</option>
                        <option value="WV">West Virginia</option>
                        <option value="WI">Wisconsin</option>
                        <option value="WY">Wyoming</option>
                    </select>
                </div>

                <div class="ff-col-1of2">
                    <label class="ff-label">Issue Age</label>
                    <input type="number" class="ff-input" name="age" min="0" max="80" value="" placeholder="35">
                </div>
            </div>
        </section>

        <!-- 2. Policy Info (ISP3) -->
        <section class="isp3-info ff-form-group">
            <div class="ff-row">
                <h2 class="ff-col">2. Policy Info</h2>
            </div>

            <div class="ff-row">
                <div class="ff-col-1of2">
                    <label class="ff-label">Face Amount <input type="radio" name="face-amount-or-premium" value="F"></label>
                    <input type="text" name="face-amount" class="ff-input" placeholder="50,000">
                </div>

                <div class="ff-col-1of2">
                    <label class="ff-label">Premium <input type="radio" name="face-amount-or-premium" value="P"></label>
                    <input type="text" name="premium-amount" class="ff-input" placeholder="1,486">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col-1of2">
                    <label class="ff-label">Premium Mode</label>
                    <select name="premium-mode" class="ff-input">
                        <option value="">Annual</option>
                        <option value="">Semi-Annual</option>
                        <option value="">Quarterly</option>
                        <option value="">Life Line</option>
                    </select>
                </div>

                <div class="ff-col-1of2">
                    <label class="ff-label">Fixed Account %</label>
                    <input type="text" name="fixed-account-percent" class="ff-input" placeholder="0">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col-1of2">
                    <label class="ff-label">Premium Mode</label>
                    <select name="premium-mode" class="ff-input">
                        <option value="">Annual</option>
                        <option value="">Semi-Annual</option>
                        <option value="">Quarterly</option>
                        <option value="">Life Line</option>
                    </select>
                </div>

                <div class="ff-col-1of2">
                    <label class="ff-label">Sub-standard Rating</label>
                    <select name="sub-standard-rating" class="ff-input">
                        <option value=""></option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                        <option value="E">E</option>
                        <option value="F">F</option>
                        <option value="H">H</option>
                        <option value="J">J</option>
                        <option value="L">L</option>
                        <option value="P">P</option>
                    </select>
                </div>
            </div>
        </section>

        <!-- 2. Policy Info (ISWL) -->
        <section class="iswl-info off-form-group">
            <div class="ff-row">
                <h2 class="ff-col">2. Policy Info</h2>
            </div>

            <div class="ff-row">
                <div class="ff-col-1of2">
                    <label class="ff-label">Face Amount <input type="radio" name="face-amount-or-premium" value="F"></label>
                    <input type="text" name="face-amount" class="ff-input" placeholder="50,000">
                </div>

                <div class="ff-col-1of2">
                    <label class="ff-label">Annual Premium <input type="radio" name="face-amount-or-premium" value="P"></label>
                    <input type="text" name="premium-amount" class="ff-input" placeholder="1,486">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col-1of2">
                    <label class="ff-label">Mode</label>
                    <select name="premium-mode" class="ff-input">
                        <option value="">Annual</option>
                        <option value="">Semi-Annual</option>
                        <option value="">Quarterly</option>
                        <option value="">Life Line</option>
                    </select>
                </div>

                <div class="ff-col-1of2">
                    <label class="ff-label">Class</label>
                    <select name="sub-standard-rating" class="ff-input">
                        <option value="ST">Standard</option>
                        <option value="PR">Preferred</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                        <option value="E">E</option>
                        <option value="F">F</option>
                        <option value="H">H</option>
                        <option value="J">J</option>
                        <option value="L">L</option>
                        <option value="P">P</option>
                    </select>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col-1of2">
                    <label class="ff-label">
                        <input type="checkbox" name="suspend-premium">
                        Premium Suspend
                    </label>
                </div>

                <div class="ff-col-1of2">
                    <label class="ff-label">Tobacco</label><br>
                    <input type="radio" class="" name="tobacco-use" id="tottle-tobacco-y" value="Y"> <label class="ff-label" for="tottle-tobacco-y">Tobacco</label>
                    <input type="radio" class="" name="tobacco-use" id="tottle-tobacco-n" value="N"> <label class="ff-label" for="tottle-tobacco-n">Non-Tobacco</label>

                </div>
            </div>
        </section>

        <!-- 3. Riders/Benefits (ISP3) -->
        <section class="isp3-info ff-form-group">
            <div class="ff-row">
                <h2 class="ff-col">3. Riders/Benefits</h2>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label">
                        <input type="checkbox" name="accidental-death-benefit">
                        Accidental Death Benefit
                    </label>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col ffx-ml-2">
                    <label class="ff-label">Face</label>
                    <input type="text" name="accidental-death-benefit-face" class="ff-input ff-input--inline" placeholder="50,000.00">
                </div>

                <div class="ff-col">
                    <label class="ff-label"><input type="checkbox" name="adbFace">
                    Keep ADB Face equal to Policy Face<br>
                    <small>($200,000 max.)</small></label>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label">
                        <input type="checkbox" name="accidental-death-benefit">
                        Waiver of Premium
                    </label>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label">
                        <input type="checkbox" name="insureds-term-rider">
                        Insured's Term Rider
                    </label>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col ffx-ml-2">
                    <label class="ff-label">Years</label>
                    <select name="insureds-term-rider-years" class="ff-input ff-input--inline">
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                    </select>
                </div>

                <div class="ff-col">
                    <label class="ff-label">Face</label>
                    <input type="text" name="insureds-term-rider-face" class="ff-input ff-input--inline" placeholder="200,00">
                    or
                </div>

                <div class="ff-col">
                    <select name="insureds-term-rider-face-multiple" class="ff-input ff-input--inline">
                        <option value="">[Enter Amount]</option>
                        <option value="1">1x Policy Face</option>
                        <option value="2">2x Policy Face</option>
                        <option value="3">3x Policy Face</option>
                        <option value="4">4x Policy Face</option>
                        <option value="5">5x Policy Face</option>
                    </select>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label">
                        <input type="checkbox" name="spouses-term-rider">
                        Spouse's Term Rider
                    </label>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col ffx-ml-2">
                    <label class="ff-label">Age</label>
                    <input type="number" name="spouses-term-rider-face" min="16" max="80" class="ff-input ff-input--inline" placeholder="35">
                </div>

                <div class="ff-col">
                    <label class="ff-label">Face</label>
                    <input type="text" name="spouses-term-rider-face" class="ff-input ff-input--inline" placeholder="200,000">
                </div>

                <div class="ff-col">
                    <label class="ff-label">Gender</label><br>
                    <label class="ff-label"><input type="radio" name="spouses-term-rider-gender" value="M"> Male</label>
                    <label class="ff-label"><input type="radio" name="spouses-term-rider-gender" value="F"> Female</label>
                </div>

                <div class="ff-col">
                    <label class="ff-label">Tobacco</label><br>
                    <label class="ff-label"><input type="radio" name="spouses-term-rider-tobacco" value="N"> Non-Tobacco</label>
                    <label class="ff-label"><input type="radio" name="spouses-term-rider-tobacco" value="Y"> Tobacco</label>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label">
                        <input type="checkbox" name="childs-term-rider">
                        Child's Term Rider
                    </label>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col ffx-ml-2">
                    <label class="ff-label">Units</label>
                    <input type="number" name="childs-term-rider-units" class="ff-input ff-input--inline" min="0" max="10" placeholder="0">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label">
                        <input type="checkbox" name="guardian-insurability-rider">
                        Guardian Insurability Rider
                    </label>
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col ffx-ml-2">
                    <label class="ff-label">Face</label>
                    <input type="text" name="guardian-insurability-rider-face" class="ff-input ff-input--inline" placeholder="25,000">
                </div>
            </div>
        </section>

        <!-- 3. Riders (ISWL) -->
        <section class="iswl-info ff-form-group">
            <h2>3. Riders</h2>

            <div>
                <label>Accidental Death Benefit</label>
                <input type="checkbox" name="accidental-death-benefit">

                <label>ADB Class</label>
                <select name="">
                    <option value="ST">Standard</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                </select>
            </div>

            <div>
                <label>Waiver of Premium</label>
                <input type="checkbox" name="accidental-death-benefit">
            </div>

            <div>
                <label>Insured's Term Rider</label>
                <input type="checkbox" name="insureds-term-rider">

                <label>Years</label>
                <label><input type="radio" name="" value="10"> 10</label>
                <label><input type="radio" name="" value="20"> 20</label>


                <label>Face</label>
                <input type="text" name="insureds-term-rider-face" class="">

                <select name="insureds-term-rider-face-multiple">
                    <option value="">[Enter Amount]</option>
                    <option value="1">1x Policy Face</option>
                    <option value="2">2x Policy Face</option>
                    <option value="3">3x Policy Face</option>
                    <option value="4">4x Policy Face</option>
                    <option value="5">5x Policy Face</option>
                </select>
            </div>

            <div>
                <label>Spouse's Term Rider</label>
                <input type="checkbox" name="spouses-term-rider">

                <label>Spouse Age</label>
                <input type="number" name="spouses-term-rider-face" class="">
            </div>

            <div>
                <label>Spouse Gender</label>
                <label><input type="radio" name="spouses-term-rider-gender" value="F"> Female</label>
                <label><input type="radio" name="spouses-term-rider-gender" value="M"> Male</label>
            </div>

            <div>
                <label>Spouse Tobacco</label>
                <label><input type="radio" name="spouses-term-rider-tobacco" value="N"> Non-Tobacco</label>
                <label><input type="radio" name="spouses-term-rider-tobacco" value="Y"> Tobacco</label>
            </div>

            <div>
                <label>Child's Term Rider</label>
                <input type="checkbox" name="childs-term-rider">

                <label>Units</label>
                <input type="number" name="childs-term-rider-units" class="" min="0" max="10">
            </div>
            </section>

        <!-- 4. Loans (ISWL) -->
        <section class="iswl-info ff-form-group">
            <h2>4. Loan</h2>

            <div>
                <label><input type="checkbox" name="loan"> Loan</label>
            </div>
            <div>
                <table>
                    <thead>
                        <tr>
                            <th>Policy Year</th>
                            <th>Attained Age</th>
                            <th>Amount</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>36</td>
                            <td><input type="text" name="" value="$0.00"></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>37</td>
                            <td><input type="text" name="" value="$0.00"></td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>38</td>
                            <td><input type="text" name="" value="$0.00"></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div>
                <button>Clear Loan Balance</button>
            </div>
        </section>
    </form>
{% endblock %}
