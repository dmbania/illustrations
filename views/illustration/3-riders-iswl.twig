<section class="iswl-info ff-form-group">
    <div class="ff-row">
        <h2 class="ff-col" id="riders">3. Riders</h2>
    </div>

    <div class="ff-row">
        <div class="ff-col">
            <label class="ff-label">
                <input type="checkbox" name="accidental-death-benefit">
                Accidental Death Benefit
            </label>

        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col ffx-ml-2">
            <label class="ff-label">ADB Class</label>
            <select name="accidental-death-benefit-class" class="ff-input ff-input--inline">
                <option value="ST">Standard</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </select>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col">
            <label class="ff-label">
                <input type="checkbox" name="waiver-of-premium">
                Waiver of Premium
            </label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col ffx-ml-2">
            <label class="ff-label">Years</label>
            <label class="ff-label"><input type="radio" name="waiver-of-premium-years" value="10"> 10</label>
            <label class="ff-label"><input type="radio" name="waiver-of-premium-years" value="20"> 20</label>
        </div>

        <div class="ff-col">
            <label class="ff-label">Face</label>
            <input type="text" name="waiver-of-premium-face" class="ff-input ff-input--inline" placeholder="200,00">
            or
        </div>

        <div class="ff-col">
            <select name="waiver-of-premium-face-multiple" class="ff-input ff-input--inline">
                <option value="">[Enter Amount]</option>
                <option value="1">1x Policy Face</option>
                <option value="2">2x Policy Face</option>
                <option value="3">3x Policy Face</option>
                <option value="4">4x Policy Face</option>
                <option value="5">5x Policy Face</option>
            </select>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col">
            <label class="ff-label">
                <input type="checkbox" name="spouses-term">
                Spouse's Term Rider
            </label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col ffx-ml-2">
            <label class="ff-label">Spouse Age</label>
            <input type="number" name="spouses-term-age" min="16" max="80" class="ff-input ff-input--inline" placeholder="35">
        </div>

        <div class="ff-col">
            <label class="ff-label">Spouse Gender</label><br>
            <label class="ff-label"><input type="radio" name="spouses-term-gender" value="M"> Male</label>
            <label class="ff-label"><input type="radio" name="spouses-term-gender" value="F"> Female</label>
        </div>

        <div class="ff-col">
            <label class="ff-label">Spouse Tobacco</label><br>
            <label class="ff-label"><input type="radio" name="spouses-term-tobacco" value="N"> Non-Tobacco</label>
            <label class="ff-label"><input type="radio" name="spouses-term-tobacco" value="Y"> Tobacco</label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col">
            <label class="ff-label">
                <input type="checkbox" name="childs-term">
                Child's Term Rider
            </label>
        </div>
    </div>

    <div class="ff-row">
        <div class="ff-col ffx-ml-2">
            <label class="ff-label">Units</label>
            <input type="number" name="childs-term-units" class="ff-input ff-input--inline" min="0" max="10" placeholder="0">
        </div>
    </div>
</section>
