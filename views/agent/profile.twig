{% extends 'layouts/standard.twig' %}

{% import 'macros/html.twig' as html %}

{% block title 'Agent Profile' %}

{% block scripts %}
    {{ parent() }}

    {{ html.script('/assets/vendor/foresters/js/AgentProfileIndex.js', true) }}
{% endblock %}

{% block content %}
    {% set state_name = "agent-state" %}

    <form action="" class="ffx-py-1 ffx-container agent-profile-form">
        <section class="ff-form-group">
            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label" for="agent-name">Name</label> <span class="ffx-required">required</span>
                    <input type="text" name="agent-name" id="agent-name" class="ff-input">
                    <input type="hidden" name="agent-uid" id="agent-uid">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label" for="agent-title">Title</label>
                    <input type="text" name="agent-title" id="agent-title" class="ff-input">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label" for="agent-company">Company Name</label>
                    <input type="text" name="agent-company" id="agent-company" class="ff-input">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label" for="agent-address-1">Business Address</label>
                    <input type="text" name="agent-address-1" id="agent-address-1" class="ff-input">
                    <input type="text" name="agent-address-2" id="agent-address-2" class="ff-input">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label" for="agent-city">City</label>
                    <input type="text" name="agent-city" id="agent-city" class="ff-input">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label">State</label>
                    {% include 'partials/states.twig' %}
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label" for="agent-zip">Zip</label>
                    <input type="text" name="agent-zip" id="agent-zip" class="ff-input">
                </div>
            </div>

            <div class="ff-row">
                <div class="ff-col">
                    <label class="ff-label" for="agent-website">Website</label>
                    <input type="text" name="agent-website" id="agent-website" class="ff-input">
                </div>
            </div>
        </section>

        <section>
            <div class="ff-row">
                <div class="ff-col">
                    <button class="ff-button save-form">Save</button> &nbsp;
                    <button class="ff-button cancel-form">Cancel</button>
                </div>
            </div>
        </section>
    </form>

{% endblock %}
